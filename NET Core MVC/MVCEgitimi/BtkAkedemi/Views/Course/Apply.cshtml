@model Candidate
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    <div class="display-6">
        Apply
    </div>



    <form method="post" asp-action="Apply">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control my-2" />
        </div>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control my-2" />
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control my-2" />
        </div>
        <div class="form-group my-2">
            <label asp-for="Age"></label>
            <select asp-for="Age" class="form-control">
                @for (int i = 18; i < 25; i++)
                {
                    <option value=@i>@i</option>
                }
            </select>
        </div>
        <fieldset>
            <legend>
                Select One Course
            </legend>
            <p>
                <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.NET Core MVC" />
                <label>ASP.Net Core MVC</label>
            </p>

            <p>
                <input id="api" type="radio" asp-for="SelectedCourse" value="ASP.NET Core api" />
                <label>ASP.Net Core api</label>
            </p>

            <p>
                <input id="blazor" type="radio" asp-for="SelectedCourse" value="blazor" />
                <label>blazor</label>
            </p>
        </fieldset>
        <div>
            <button class="btn btn-primary" type="submit">
                Apply
            </button>
            <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
        </div>
    </form>

}
